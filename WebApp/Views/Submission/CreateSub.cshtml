@model Project1640.Dto.Submissions.SubmissionAddRequest
@{
    ViewData["Title"] = "CreateSub";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <!-- trỏ đến vị trí chỉnh xóa sửa -->
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Categories" asp-action="Index">Roles</a></li>
        <li class="breadcrumb-item"><a asp-controller="Categories" asp-action="Index">Edit</a></li>
        <li class="breadcrumb-item"><a asp-controller="Categories" asp-action="Delete">Delete</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create</li>
    </ol>
    <h6 class="slim-pagetitle">Create</h6>
</div><!-- slim-pageheader -->

<div class="section-wrapper">
    <label class="section-title">Create</label>
    <p class="mg-b-20 mg-sm-b-40">A form with a label on top of each form control.</p>
    <form asp-action="CreateSub" enctype="multipart/form-data" method="post">
        <div class="form-layout">
            <div class="row mg-b-25">
                <!-- Truyền dữ liệu -->
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label">Name: <span class="tx-danger">*</span></label>
                        <input asp-for="Name" class="form-control" type="text" name="name" value="....." placeholder="Enter Name">
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label">Description: <span class="tx-danger">*</span></label>
                        <input asp-for="Description" class="form-control" type="text" name="Description" value="....." placeholder="Enter Description">
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label">ClosureDate: <span class="tx-danger">*</span></label>
                        <input asp-for="CloseDate" class="form-control" type="date" name="closureDate" placeholder="Enter ClosureDate">
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-8">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">FinalClosureDate: <span class="tx-danger">*</span></label>
                        <input asp-for="FinalClosureDate" class="form-control" type="date" name="finalClosureDate" placeholder="Enter FinalClosureDate">
                    </div>
                </div><!-- col-8 -->
            </div><!-- row -->
            <!-- confirm data -->
            <div class="form-layout-footer">
                <button type="submit" class="btn btn-primary bd-0">Add</button>
                <button class="btn btn-secondary bd-0" asp-controller="Submission" asp-action="Index">Cancel</button>
            </div><!-- form-layout-footer -->
        </div><!-- form-layout -->
    </form>
</div><!-- section-wrapper -->